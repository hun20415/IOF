<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping package="kr.ac.bitl.model">
    <class name="kr.ac.iof.model.User" table="SYS_USER_INFO">
        <id name="useridNum" type="int">
            <column name="USER_IDNUM" precision="38" scale="0" />
            <generator class="assigned"/>
        </id>
        <property name="username" type="string">
            <column name="USER_NAME" length="20" not-null="false" />
        </property>
        <property name="userpasswd" type="string">
            <column name="USER_PASSWD" length="20" not-null="false" />
        </property>
        <property name="email" type="string">
            <column name="EMAIL" length="20" not-null="false" />
        </property>
        <property name="mobilephone" type="string">
            <column name="MOBILEPHONE" length="20" not-null="false" />
        </property>
        <property name="phone" type="string">
            <column name="PHONE" length="20" not-null="false" />
        </property>
        <property name="home_zipcode" type="string">
            <column name="HOME_ZIPCODE" length="20" not-null="false" />
        </property>
        <property name="home_addr" type="string">
            <column name="HOME_ADDR" length="20" not-null="false" />
        </property>
        <property name="sys_datatime" type="string">
            <column name="SYS_DATATIME" length="20" not-null="false" />
        </property>
         <property name="active_yn" type="int">
            <column name="ACTIVE_YN" length="38" not-null="false" />
        </property>
        <many-to-one name="usergroup"
         	class = "usergroupID" 
         	column = "USERGROUO_ID" 
         	unique="false"
         	not-null="true" 
         	cascade="all"
         	foreign-key="SYS_USER_INFO_FK"
         />
        
    </class>
</hibernate-mapping>
